<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Register"
                android:textSize="20sp"

                android:textColor="@android:color/black"
                />
        </androidx.appcompat.widget.Toolbar>




    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/main_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar"
        android:layout_marginTop="-38dp"
        android:visibility="visible">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/enter_registry"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Patient name"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:hint="Patient's Name"
                    android:inputType="textCapSentences"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/patientage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Patient's age"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/patient_age"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:focusableInTouchMode="false"
                    android:hint="Patient's Age"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Address"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:hint="Address"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/text_consultant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/actor"
                    android:text="Constultant"
                    android:textColor="#000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/consultant"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:hint="Consultant Name"
                    android:inputType="textCapSentences"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Hospital No. "
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/hosp_no"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:hint="Hosp No."
                    android:inputType="phone"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/adamina"
                    android:text="Bed No "
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/bed_no"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:hint="Bed No."
                    android:inputType="textCapSentences"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Admission Date "
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/admission"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:focusableInTouchMode="false"
                    android:hint="Admission Date"
                    android:inputType="textCapSentences"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp"


                    />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Discharge Date"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/plot_no"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:focusableInTouchMode="false"
                    android:hint="eg. 345"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Sq/Yrds"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/square_yard"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:drawableEnd="@drawable/ic_outline_edit_24"
                    android:gravity="center_vertical"
                    android:hint="eg. 240"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/price_range_from"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background"

                    android:drawableEnd="@drawable/ic_outline_edit_24"
                    android:hint="PKR."
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address"
                    android:textColor="#000"
                    android:textSize="12sp" />


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/enter_registry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/purple_200"
            android:clickable="true"
            android:text="Add Property"
            android:textAllCaps="false"
            android:textColor="#ffff" />
    </RelativeLayout>


</RelativeLayout>